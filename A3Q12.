#include<stdio.h>

int main(){
    //declaration
    int n = 20 , count=0 ,num ;
    //loop
    while(n>0){
        //input numbers
        printf("Enter number %d\n" ,21-n);
        scanf("%d" , &num);
        //count goes up by 1 every time an even number is encountered
        if(num%2==0){
            count++;
        }
        n--;
    }
    //output
    printf("The number of even numbers is %d\n" , count);
    return 0;
}
